{% extends 'RDFGithubBotBundle::layout.html.twig' %}

{% block content %}
<h1>Project</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ entity.username }}</td>
        </tr>
        <tr>
            <th>Repository</th>
            <td>{{ entity.repository }}</td>
        </tr>
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_project') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_project_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_project_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn" type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock content %}
